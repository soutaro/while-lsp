{
  "scopeName": "source.while",
  "patterns": [{ "include": "#keyword" }, { "include": "#functionName" }, { "include": "#variables" }, { "include": "#phpcomment" }],
  "repository": {
    "keyword": {
      "match": "\\b(while|if|echo|return|function|else)\\b",
      "name": "keyword.while"
    },
    "functionName": {
      "match": "\\b[A-Z][a-zA-Z0-9_]*\\b",
      "name": "entity.name.function.while"
    },
    "variables": {
      "match": "\\$[a-z][a-zA-Z0-9_]*\\b",
      "name": "variable.while"
    },
    "phpcomment": {
      "match": "<\\?php",
      "name": "comment.while"
    }
  }
}
